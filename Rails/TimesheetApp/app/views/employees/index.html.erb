<p id="notice"><%= notice %></p>

<h1>Employees</h1>
<style>
table, th, td {
    border: 1px solid black;
}
</style>
<table>
  <thead>
    <tr >
      <th >Firstname</th>
      <th>Lastname</th>
      <th> Deparment</th>
      <th>Timein</th>
      <th>Timeout</th>
      <th>Notification</th>
      <th colspan="500"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.Firstname %></td>
        <td><%= employee.Lastname %></td>
        <td><%= employee.Deparment %></td>
        <td><%= employee.Timein %></td>
        <td><%= employee.Timeout %></td>
        <td><%= employee.Notification %></td>
        <td><%= button_to 'show', employee %></td>
        <td><%= button_to 'Edit',edit_employee_path(employee),method: :edit %></td>
        <td><%= button_to 'Destroy',employee_path(employee), method: :delete, data: { confirm: 'Are you sure?'} %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employee', new_employee_path %>
